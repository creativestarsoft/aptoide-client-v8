<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/fragment_credit_card_authorization_app_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_credit_card_authorization_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/toolbarTheme"
        app:title="@string/fragment_credit_card_authorization_toolbar_title"
        />
  </android.support.design.widget.AppBarLayout>

  <com.braintreepayments.cardform.view.CardForm
      android:id="@+id/fragment_credit_card_authorization_form"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/fragment_credit_card_authorization_app_bar"
      android:layout_marginEnd="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="40dp"
      />

  <Button
      android:id="@+id/fragment_credit_card_authorization_next_button"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="10dp"
      android:layout_marginEnd="12dp"
      android:layout_marginLeft="12dp"
      android:layout_marginRight="12dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="10dp"
      android:enabled="false"
      android:text="@string/fragment_credit_card_authorization_next_button"
      style="@style/Widget.Aptoide.Button.Colored"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:id="@+id/fragment_credit_card_authorization_progress_bar"
      android:layout_height="match_parent"
      android:layout_below="@id/fragment_credit_card_authorization_app_bar"
      android:background="@color/white"
      android:elevation="10dp"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AptoideThemeDefault"
        />
  </LinearLayout>
</RelativeLayout>